<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Clients.Mobile.CriaUsuario">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="entFirstName" Placeholder="Digite o nome" />
            <Entry x:Name="entSurname" Placeholder="Digite o sobrenome" />
            <Entry x:Name="entAge" Placeholder="Digite a idade" Keyboard="Numeric" />
            <Button x:Name="btCriaUsuario"
                    Text="Criar Usuário"
                    TextColor="White"
                    BackgroundColor="Purple"
                    Clicked="btCriaUsuario_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>