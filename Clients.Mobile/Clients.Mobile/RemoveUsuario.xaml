<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Clients.Mobile.RemoveUsuario">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="entId"
                   Placeholder="Digite o id"
                   />
            <Button x:Name="btRemove_Usuario"
                    Text="Remover Usuário"
                    TextColor="White"
                    BackgroundColor="Purple"
                    HeightRequest="50"
                    Clicked="btRemove_Usuario_Clicked"
                    />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>