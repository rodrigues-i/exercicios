<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Clients.Mobile.BuscaUsuarioPorId">
    <ContentPage.Content>
        <StackLayout x:Name="UserStack">
            <Entry x:Name="entId" Placeholder="Digite o id" />
            <Button 
                x:Name="btBusca_Usuario"
                Text="Buscar usuário" 
                TextColor="White" 
                BackgroundColor="Purple"
                Clicked="btBusca_Usuario_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>